{
    "name": "good-apis",
    "version": "0.0.2",
    "description": "基于axios统一接口请求方案",
    "main": "dist/index.js",
    "module": "dist/index-esm-min.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "license": "ISC",
    "author": "chenjiajing",
    "private": false,
    "homepage": "https://github.com/chenjiajing23/apis",
    "repository": {
        "type": "git",
        "url": "git@github.com:chenjiajing23/apis.git"
    },
    "keywords": [
        "apis",
        "axios",
        "typescript"
    ],
    "scripts": {
        "build": "npm run clear && tsc",
        "dev": "tsc -w",
        "clear": "rimraf dist",
        "fix": "eslint src --ext .tsx,.ts --color --fix",
        "test": "parcel test/index.html --out-dir test/dist",
        "gc": "git-cz"
    },
    "peerDependencies": {
        "axios": "^0.20.0"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/node": "^14.11.2",
        "@typescript-eslint/parser": "^4.2.0",
        "axios": "^0.20.0",
        "commitizen": "^4.2.1",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "parcel": "^1.12.4",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "tslib": "^2.0.1",
        "typescript": "^4.0.3"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run fix  && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "prettier --write",
            "git add"
        ]
    }
}
